<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dailyplanner"
    android:theme="@style/AppTheme.NoActionBar" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity android:name=".Activity.maps" />
        <activity android:name=".Activity.Add_Alarm" />
        <activity android:name=".Activity.Alarm" />
        <activity android:name=".Activity.Showevent" />
        <activity android:name=".Activity.schedule" />
        <activity android:name=".Activity.calendar_activity" />
        <activity android:name=".Activity.Dashboard" />
        <activity android:name=".Activity.Splash_activity" />
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.LoginFragment" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.fragment_register" />
    </application>

</manifest>